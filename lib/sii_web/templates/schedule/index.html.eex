<h1>Listing Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Day</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for schedule <- @schedules do %>
    <tr>
      <td><%= schedule.id %></td>
      <td><%= schedule.day %></td>

      <td>
        <%= link "Show", to: Routes.schedule_path(@conn, :show, schedule) %>
        <%= link "Edit", to: Routes.schedule_path(@conn, :edit, schedule) %>
        <%= link "Delete", to: Routes.schedule_path(@conn, :delete, schedule), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New schedule", to: Routes.schedule_path(@conn, :new) %></span>
